{
  "name": "mini-foo-server",
  "version": "0.1.0",
  "description": "Backend API for evaluation results viewer",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "tsx --test src/**/*.test.ts",
    "bootstrap": "tsx bootstrap.ts",
    "start": "tsx bootstrap.ts && nodemon",
    "build": "tsc --noEmit"
  },
  "author": "Promptfoo Team",
  "license": "MIT",
  "keywords": [
    "api",
    "express",
    "sqlite",
    "typescript"
  ],
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "nodemon": "^3.1.11",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "bootstrap.ts",
      "sample_data.ts"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules",
      "dist",
      "*.test.ts",
      "db.sqlite"
    ],
    "exec": "tsx src/index.ts",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
